<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<managed-bean>
		<managed-bean-name>loginForm</managed-bean-name>
		<managed-bean-class>cz.upol.jasgweb.login.LoginForm</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>resultReporter</managed-bean-name>
		<managed-bean-class>cz.upol.jasgweb.ResultReporter</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>cz.upol.jasgweb.login.Login</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>studentsDoneAsgs</managed-bean-name>
		<managed-bean-class>cz.upol.jasgweb.pages.StudentsDoneAsgs</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>studentsSummary</managed-bean-name>
		<managed-bean-class>cz.upol.jasgweb.pages.StudentsSummary</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>	
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-action>#{loginForm.logIn}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/student/welcome.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.logOut}</from-action>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.checkLogin}</from-action>
			<from-outcome>unsuccess</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
	<from-view-id>*</from-view-id>
		<navigation-case>
			<from-action>#{studentsSummary.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/student/summary.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{studentsDoneAsgs.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/student/done.xhtml</to-view-id>
		</navigation-case>
	
	</navigation-rule>
	
	
	
	<factory>
		<exception-handler-factory>
			cz.upol.jasgweb.errors.JAsgExceptionHandlerFactory
		</exception-handler-factory>
	</factory>
</faces-config>
